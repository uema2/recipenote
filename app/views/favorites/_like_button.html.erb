<% if current_user.fav_recipe?(recipe) %>
  <%= form_for(current_user.favorites.find_by(recipe_id: recipe.id), html: { method: :delete}) do |f| %>
    <%= button_tag(class: "btn btn-default btn-sm active") do %>
      <%= content_tag :span, "お気に入り済", class: "glyphicon glyphicon-heart" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :recipe_id, recipe.id %>
    <%= button_tag(class: "btn btn-default btn-sm") do %>
      <%= content_tag :span, "お気に入り", class: "glyphicon glyphicon-heart-empty" %>
    <% end %>
  <% end %>
<% end %>