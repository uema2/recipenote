<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <h1><%= @user.name %>のフォロワー<span class="badge"><%= @count_followers %></span></h1>
    <% if @followers.any? %>
      <ul class="media-list">
        <% @followers.each do |user| %>
          <li class="media">
            <div>
              <%= user.name %>：<%= link_to "View profile", user_path(user) %>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @followers %>
    <% end %>
  </div>
</div>